package site.metacoding.ex13;

import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JPanel;

public class EventEx01 extends JFrame {

	JPanel myPanel;
	JButton btn1;
	JButton btn2;

	public EventEx01() {
		setSize(300, 300);
		setLocationRelativeTo(null); // 프레임 화면 중앙 배치
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); // x버튼 클릭시 main 종료

		myPanel = new JPanel();
		add(myPanel);

		btn1 = new JButton("버튼1을 클릭하세요");
		myPanel.add(btn1);

		btn2 = new JButton("버튼2를 클릭하세요");
		myPanel.add(btn2);
		// 윈도우야 지켜봐줘 이 버튼을!!
		btn1.addActionListener(new ActionListener() {

			// 버튼이 클릭되면 윈도우가 해당 메서드를 콜백해준다.
			@Override
			public void actionPerformed(ActionEvent e) {
				System.out.println("버튼이 클릭되었습니다");
			}
		});

		btn2.addActionListener(new ActionListener() {

			@Override
			public void actionPerformed(ActionEvent e) {
				System.out.println("버튼2 클릭 되엇습니다");
			}
		});

		setVisible(true);

	}

	public static void main(String[] args) {

		new EventEx01();

	}
}